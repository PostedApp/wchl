{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["../node_modules/@types"]
  },
  "exclude": ["**/*/node_modules", "**/*/__tests__"]
}
